<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_invoice_report_search" model="ir.ui.view">
        <field name="name">account.invoice.report.search</field>
        <field name="model">account.invoice.report</field>
        <field name="arch" type="xml">
            <search string="Invoices Analysis">
                <field name="partner_id" operator="child_of" />
                <field name="product_id" />
                <field name="product_category_id"
                    filter_domain="[('product_category_id', 'child_of', self)]" />
                <field name="invoice_user_id" />
                <filter name="my_invoice" string="My Invoices"
                    domain="[('invoice_user_id', '=', uid)]" />
                <separator />
                <filter name="toinvoice" string="Draft"
                    domain="[('state', '=', 'draft')]"
                    help="Draft Invoices" />
                <filter name="current" string="Posted"
                    domain="[('state', '=', 'posted')]" />
                <separator />
                <filter name="customer" string="Customers"
                    domain="[('move_type', 'in', ('out_invoice', 'out_refund'))]" />
                <filter name="supplier" string="Vendors"
                    domain="[('move_type', 'in', ('in_invoice', 'in_refund'))]" />
                <separator />
                <filter name="invoice" string="Invoices"
                    domain="[('move_type', 'in', ('out_invoice', 'in_invoice'))]" />
                <filter name="creditnote" string="Credit Notes"
                    domain="[('move_type', 'in', ('out_refund', 'in_refund'))]" />
                <separator />
                <filter name="filter_invoice_date"
                    date="invoice_date" />
                <filter name="invoice_date_due"
                    date="invoice_date_due" />
                <filter name="later_than_a_year_ago" string="Posted Date: Last 365 days"
                    domain="[('invoice_date', '&gt;=', (datetime.datetime.combine(context_today() + relativedelta(days=-365), datetime.time(0,0,0))).strftime('%Y-%m-%d %H:%M:%S'))]" />
                <group expand="1" string="Group By">
                    <filter name="partner_id" string="Partner"
                        context="{'group_by': 'partner_id', 'residual_visible':True}" />
                    <filter name='user' string="Salesperson"
                        context="{'group_by': 'invoice_user_id'}" />
                    <filter name="category_product" string="Product Category"
                        context="{'group_by': 'product_category_id','residual_invisible':True}" />
                    <filter name="status" string="Status"
                        context="{'group_by': 'state'}" />
                    <filter name="company" string="Company"
                        context="{'group_by': 'company_id'}"
                        groups="base.group_multi_company" />
                    <separator orientation="vertical" />
                    <filter name="invoice_date" string="Date"
                        context="{'group_by': 'invoice_date'}"
                        invisible="context.get('invoice_report_view_hide_invoice_date')" />
                    <filter name="group_by_invoice_date_week" string="Date"
                        context="{'group_by': 'invoice_date:week'}"
                        invisible="not context.get('invoice_report_view_hide_invoice_date')" />
                    <filter name="duemonth" string="Due Date"
                        context="{'group_by': 'invoice_date_due:month'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Custom reports (aka filters) -->
    <record id="filter_invoice_report_salespersons" model="ir.filters">
        <field name="name">By Salespersons</field>
        <field name="model_id">account.invoice.report</field>
        <field name="domain">[]</field>
        <field name="user_id" eval="False" />
        <field name="context">{'group_by': ['invoice_date:month', 'invoice_user_id']}</field>
    </record>

    <record id="filter_invoice_product" model="ir.filters">
        <field name="name">By Product</field>
        <field name="model_id">account.invoice.report</field>
        <field name="domain">[]</field>
        <field name="user_id" eval="False" />
        <field name="context">{
            'group_by': ['invoice_date:month', 'product_id'],
            'set_visible':True,
            'residual_invisible':True
        }</field>
    </record>

    <record id="filter_invoice_product_category" model="ir.filters">
        <field name="name">By Product Category</field>
        <field name="model_id">account.invoice.report</field>
        <field name="domain">[]</field>
        <field name="user_id" eval="False" />
        <field name="context">{
            'group_by': ['invoice_date:month', 'product_category_id'],
            'residual_invisible':True
        }</field>
    </record>

    <record id="filter_invoice_refund" model="ir.filters">
        <field name="name">By Credit Note</field>
        <field name="model_id">account.invoice.report</field>
        <field name="domain">[('move_type', '=', 'out_refund')]</field>
        <field name="user_id" eval="False" />
        <field name="context">{'group_by': ['invoice_date:month', 'invoice_user_id']}</field>
    </record>

    <record id="filter_invoice_country" model="ir.filters">
        <field name="name">By Country</field>
        <field name="model_id">account.invoice.report</field>
        <field name="domain">[]</field>
        <field name="user_id" eval="False" />
        <field name="context">{'group_by': ['invoice_date:month', 'country_id']}</field>
    </record>

    <record id="view_account_invoice_report_pivot" model="ir.ui.view">
        <field name="name">account.invoice.report.pivot</field>
        <field name="model">account.invoice.report</field>
        <field name="arch" type="xml">
            <pivot string="Invoices Analysis" sample="1">
                <field name="product_category_id" type="col" />
                <field name="invoice_date" type="row" />
                <field name="price_subtotal" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="view_account_invoice_report_graph" model="ir.ui.view">
        <field name="name">account.invoice.report.graph</field>
        <field name="model">account.invoice.report</field>
        <field name="arch" type="xml">
            <graph string="Invoices Analysis" type="line" sample="1">
                <field name="invoice_date" interval="day" />
                <field name="price_subtotal" type="measure" />
            </graph>
        </field>
    </record>

    <record id="account_invoice_report_view_tree" model="ir.ui.view">
        <field name="name">account.invoice.report.view.list</field>
        <field name="model">account.invoice.report</field>
        <field name="arch" type="xml">
            <list string="Invoices Analysis">
                <field name="invoice_date" optional="show" />
                <field name="invoice_date_due" optional="show" />
                <field name="journal_id" optional="hide" />
                <field name="move_type" optional="hide" />
                <field name="move_id" string="Invoice Number" />
                <field name="partner_id" optional="show" />
                <field name="product_category_id" optional="hide" />
                <field name="product_id" optional="show" />
                <field name="quantity" optional="hide" sum="Total" />
                <field name="price_average" optional="hide" sum="Total" />
                <field name="price_margin" optional="hide" />
                <field name="price_subtotal" optional="show" sum="Total" />
                <field name="price_subtotal_currency" optional="show" sum="Total" />
                <field name="price_total" optional="show" sum="Total" />
                <field name="price_total_currency" optional="show" sum="Total" />
                <field name="inventory_value" optional="hide" sum="Total" />
                <field name="state" widget="badge" optional="hide" />
                <field name="payment_state" widget="badge" optional="hide" />
                <field name="invoice_user_id" optional="hide" widget="many2one_avatar_user" />
                <field name="company_id" groups="base.group_multi_company" />
            </list>
        </field>
    </record>

    <record id="action_account_invoice_report_all_supp" model="ir.actions.act_window">
        <field name="name">Bills Analysis</field>
        <field name="res_model">account.invoice.report</field>
        <field name="path">vendor-bills-analysis</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="context">{
            'search_default_current': 1,
            'search_default_supplier': 1,
            'search_default_later_than_a_year_ago': 1,
        }</field>
        <field name="search_view_id" ref="view_account_invoice_report_search" />
        <field name="help">From this report, you can have an overview of the amount invoiced from
            your vendors. The search tool can also be used to personalise your Invoices reports and
            so, match this analysis to your needs.</field>
    </record>

    <record id="action_account_invoice_report_all" model="ir.actions.act_window">
        <field name="name">Invoices Analysis</field>
        <field name="res_model">account.invoice.report</field>
        <field name="path">customer-invoices-analysis</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="context">{
            'search_default_current': 1,
            'search_default_customer': 1,
            'search_default_later_than_a_year_ago': 1,
        }</field>
        <field name="search_view_id" ref="view_account_invoice_report_search" />
        <field name="help">From this report, you can have an overview of the amount invoiced to your
            customers. The search tool can also be used to personalise your Invoices reports and so,
            match this analysis to your needs.</field>
    </record>

</odoo>