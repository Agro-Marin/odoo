<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_purchase_order_search" model="ir.ui.view">
        <field name="name">report.purchase.order.search</field>
        <field name="model">purchase.report</field>
        <field name="arch" type="xml">
            <search string="Purchase Analysis">
                <field name="partner_id" />
                <field name="product_id" />
                <group expand="0" string="Extended Filters">
                    <field name="product_category_id"
                        filter_domain="[('product_category_id', 'child_of', self)]" />
                    <field name="user_id" />
                    <field name="company_id"
                        groups="base.group_multi_company" />
                </group>
                <filter name="quotes" string="Requests for Quotation"
                    domain="[('state', '=', 'draft')]" />
                <filter name="orders" string="Purchase Orders"
                    domain="[('state', 'not in', ('draft', 'cancel'))]" />
                <separator />
                <filter name="filter_date_order"
                    date="date_order" />
                <filter name="filter_date_approve"
                    date="date_approve"
                    default_period="month" />
                <filter name="later_than_a_year_ago" string="Confirmation Date: Last 365 days"
                    domain="[('date_approve', '&gt;=', (datetime.datetime.combine(context_today() + relativedelta(days=-365), datetime.time(0,0,0))).strftime('%Y-%m-%d %H:%M:%S'))]" />
                <group expand="1" string="Group By">
                    <filter name="group_partner_id" string="Vendor"
                        context="{'group_by': 'partner_id'}" />
                    <filter name="group_product_id" string="Product"
                        context="{'group_by': 'product_id'}" />
                    <filter name="group_product_category_id" string="Product Category"
                        context="{'group_by': 'product_category_id'}" />
                    <filter name="user_id" string="Buyer"
                        context="{'group_by': 'user_id'}" />
                    <filter name="status" string="Status"
                        context="{'group_by': 'state'}" />
                    <filter name="company" string="Company"
                        context="{'group_by': 'company_id'}"
                        groups="base.group_multi_company" />
                    <separator />
                    <filter name="order_month" string="Order Date"
                        context="{'group_by': 'date_order:month'}" />
                    <filter name="group_date_approve_month" string="Confirmation Date"
                        context="{'group_by': 'date_approve:month'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="view_purchase_order_pivot" model="ir.ui.view">
        <field name="name">product.month.pivot</field>
        <field name="model">purchase.report</field>
        <field name="arch" type="xml">
            <pivot string="Purchase Analysis" display_quantity="1" sample="1">
                <field name="product_category_id" type="row" />
                <field name="order_id" type="row" />
                <field name="price_subtotal" type="measure" />
                <field name="price_total" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="view_purchase_order_graph" model="ir.ui.view">
        <field name="name">product.month.graph</field>
        <field name="model">purchase.report</field>
        <field name="arch" type="xml">
            <graph string="Purchase Analysis" type="line" sample="1">
                <field name="date_approve" interval="day" />
                <field name="price_subtotal" type="measure" />
            </graph>
        </field>
    </record>

    <record id="purchase_report_view_tree" model="ir.ui.view">
        <field name="name">purchase.report.view.list</field>
        <field name="model">purchase.report</field>
        <field name="arch" type="xml">
            <list string="Purchase Analysis">
                <field name="date_order" optional="show" />
                <field name="order_id" optional="show" />
                <field name="partner_id" optional="show" />
                <field name="product_category_id" optional="show" />
                <field name="product_id" optional="show" />
                <field name="qty_ordered" sum="Sum of Qty Ordered" optional="hide" />
                <field name="qty_transfered" sum="Sum of Qty Received" optional="hide" />
                <field name="qty_invoiced" sum="Sum of Qty Billed" optional="hide" />
                <field name="price_subtotal" widget="monetary" sum="Sum of Untaxed Total"
                    optional="hide" />
                <field name="price_total" widget="monetary" sum="Sum of Total"
                    optional="show" />
                <field name="state" widget="badge" optional="show" />
                <field name="user_id" widget="many2one_avatar_user" optional="show" />
                <field name="currency_id" optional="show" column_invisible="True" />
                <field name="company_id" optional="show" groups="base.group_multi_company" />
            </list>
        </field>
    </record>

    <record id="action_purchase_order_report_all" model="ir.actions.act_window">
        <field name="name">Purchase Analysis</field>
        <field name="res_model">purchase.report</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="view_id"></field>  <!-- force empty -->
        <field name="target">current</field>
        <field name="context">{
            'search_default_orders': 1,
            'search_default_later_than_a_year_ago': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Purchase Analysis
            </p>
            <p>
                This analysis allows you to easily check and analyse your company purchase history
                and performance.
                You can track your negotiation performance, the delivery performance of your
                vendors, etc
            </p>
        </field>
    </record>

</odoo>