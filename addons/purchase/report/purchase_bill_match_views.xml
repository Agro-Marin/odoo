<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_purchase_bill_match_filter" model="ir.ui.view">
        <field name="name">purchase.bill.match.select</field>
        <field name="model">purchase.bill.match</field>
        <field name="arch" type="xml">
            <search string="Search Reference Document">
                <field name="name" string="Reference"
                    filter_domain="['|', ('name','ilike',self), ('reference','=like',self+'%')]" />
                <field name="amount" />
                <separator />
                <field name="partner_id" operator="child_of" />
                <separator />
                <filter name="purchase_orders" string="Purchase Orders"
                    domain="[('purchase_order_id', '!=', False)]" />
                <filter name="vendor_bills" string="Vendor Bills"
                    domain="[('vendor_bill_id', '!=', False)]" />
            </search>
        </field>
    </record>

    <record id="view_purchase_bill_match_tree" model="ir.ui.view">
        <field name="name">purchase.bill.match.list</field>
        <field name="model">purchase.bill.match</field>
        <field name="arch" type="xml">
            <list string="Reference Document">
                <field name="name" />
                <field name="reference" />
                <field name="partner_id" />
                <field name="date" />
                <field name="amount" />
                <field name="currency_id" column_invisible="True" />
                <field name="company_id"
                    options="{'no_create': True}"
                    groups="base.group_multi_company" />
            </list>
        </field>
    </record>

</odoo>