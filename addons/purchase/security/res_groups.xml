<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="res_groups_privilege_purchase" model="res.groups.privilege">
            <field name="name">Purchase</field>
            <field name="sequence">8</field>
            <field name="category_id" ref="base.module_category_supply_chain" />
        </record>

        <record id="group_purchase_user" model="res.groups">
            <field name="name">User</field>
            <field name="sequence">10</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
            <field name="privilege_id" ref="res_groups_privilege_purchase" />
        </record>

        <record id="group_purchase_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="sequence">20</field>
            <field name="privilege_id" ref="res_groups_privilege_purchase" />
            <field name="implied_ids" eval="[(4, ref('group_purchase_user'))]" />
            <field name="user_ids" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        </record>

        <record id="group_auto_done_setting" model="res.groups">
            <field name="name">Lock Confirmed Purchases</field>
        </record>

        <record id="group_warning_purchase" model="res.groups">
            <field name="name">A warning can be set on a product or a customer (Purchase)</field>
        </record>

        <record id="group_send_reminder" model="res.groups">
            <field name="name">Send an automatic reminder email to confirm delivery</field>
        </record>

        <record id="group_purchase_order_lock" model="res.groups">
            <field name="name">Lock Purchase Orders</field>
            <field name="comment">Users in this group can manually lock purchase orders</field>
        </record>

        <record id="group_purchase_order_unlock" model="res.groups">
            <field name="name">Unlock Purchase Orders</field>
            <field name="comment">Users in this group can unlock locked purchase orders</field>
        </record>

    </data>

    <data noupdate="1">

        <record id="base.group_user" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('purchase.group_send_reminder'))]" />
        </record>

    </data>

</odoo>