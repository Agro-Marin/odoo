<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_base_automation_runtime_search" model="ir.ui.view">
        <field name="name">base.automation.runtime.search</field>
        <field name="model">base.automation.runtime</field>
        <field name="arch" type="xml">
            <search string="Workflow Runtimes">
                <field name="name" />
                <field name="automation_id" />
                <field name="partner_id" />
                <field name="reference" />
                <separator />
                <filter string="Draft" name="draft"
                    domain="[('state', '=', 'draft')]" />
                <filter string="In Progress" name="in_progress"
                    domain="[('state', '=', 'in_progress')]" />
                <filter string="Done" name="done"
                    domain="[('state', '=', 'done')]" />
                <separator />
                <filter string="My Company" name="my_company"
                    domain="[('company_id', '=', company_id)]" />
                <group>
                    <filter string="Workflow" name="group_automation"
                        context="{'group_by': 'automation_id'}" />
                    <filter string="Partner" name="group_partner"
                        context="{'group_by': 'partner_id'}" />
                    <filter string="State" name="group_state"
                        context="{'group_by': 'state'}" />
                    <filter string="Date" name="group_date"
                        context="{'group_by': 'date'}" />
                    <filter string="Company" name="group_company"
                        context="{'group_by': 'company_id'}"
                        groups="base.group_multi_company" />
                </group>
            </search>
        </field>
    </record>

    <record id="view_base_automation_runtime_tree" model="ir.ui.view">
        <field name="name">base.automation.runtime.tree</field>
        <field name="model">base.automation.runtime</field>
        <field name="arch" type="xml">
            <list string="Workflow Runtimes">
                <field name="name" />
                <field name="automation_id" />
                <field name="partner_id" />
                <field name="amount" sum="Total" />
                <field name="date" />
                <field name="progress_display" />
                <field name="state" widget="badge"
                    decoration-info="state == 'draft'"
                    decoration-warning="state == 'in_progress'"
                    decoration-success="state == 'done'"
                    decoration-muted="state == 'cancel'" />
                <field name="company_id" groups="base.group_multi_company" />
            </list>
        </field>
    </record>

    <record id="view_base_automation_runtime_form" model="ir.ui.view">
        <field name="name">base.automation.runtime.form</field>
        <field name="model">base.automation.runtime</field>
        <field name="arch" type="xml">
            <form string="Workflow Runtime">
                <header>
                    <button
                        name="action_start"
                        string="Start Workflow"
                        type="object"
                        invisible="state != 'draft'"
                        class="btn-primary" />
                    <button
                        name="action_next_step"
                        string="Next Step"
                        type="object"
                        invisible="state != 'in_progress'"
                        class="btn-primary" />
                    <button
                        name="action_cancel"
                        string="Cancel"
                        type="object"
                        invisible="state in ['done', 'cancel']" />
                    <field name="state" widget="statusbar"
                        statusbar_visible="draft,in_progress,done" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="action_view_automation"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-sitemap">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Workflow</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="automation_id" readonly="state != 'draft'" />
                            <field name="partner_id" readonly="state != 'draft'" />
                            <field name="diff_partner_id" readonly="state != 'draft'" />
                        </group>
                        <group>
                            <field name="date" readonly="state != 'draft'" />
                            <field name="company_id" readonly="state != 'draft'" />
                            <field name="multicompany_id" readonly="state != 'draft'" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="amount" readonly="state != 'draft'" />
                            <field name="currency_id" readonly="state != 'draft'" />
                        </group>
                        <group>
                            <field name="reference" readonly="state != 'draft'" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Workflow Steps" name="lines">
                            <field name="line_ids" readonly="1">
                                <list string="Steps" create="0" delete="0">
                                    <field name="sequence" widget="handle" />
                                    <field name="name" />
                                    <field name="state" widget="badge"
                                        decoration-info="state == 'waiting'"
                                        decoration-success="state == 'ready'"
                                        decoration-primary="state == 'in_progress'"
                                        decoration-muted="state == 'done'"
                                        decoration-danger="state == 'error'" />
                                    <field name="created_record_ref" />
                                    <button
                                        name="action_view_document"
                                        string="View Document"
                                        type="object"
                                        icon="fa-external-link"
                                        invisible="not created_record_ref" />
                                </list>
                            </field>
                            <group>
                                <field name="progress" widget="progressbar" />
                                <field name="progress_display" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="action_base_automation_runtime" model="ir.actions.act_window">
        <field name="name">Workflow Runtimes</field>
        <field name="res_model">base.automation.runtime</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a workflow runtime instance
            </p>
            <p>
                Workflow runtimes execute multi-step automation workflows.
                Start a workflow to process it step-by-step or automatically.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_base_automation_runtime"
        name="Workflow Runtimes"
        parent="base.menu_automation"
        action="action_base_automation_runtime"
        sequence="65"
    />

</odoo>