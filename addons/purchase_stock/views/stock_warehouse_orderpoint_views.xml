<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_warehouse_orderpoint_tree_editable_inherited_mrp" model="ir.ui.view">
        <field name="name">stock.warehouse.orderpoint.list.editable.inherit.mrp</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.view_warehouse_orderpoint_tree_editable" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_stock_replenishment_info']" position="before">
                <field name="show_supplier" column_invisible="True" />
                <field name="supplier_id_placeholder" column_invisible="True" /> <!-- Needed for the
                placeholder widget -->
                <field name="supplier_id" widget="stock.forced_placeholder" string="Vendor"
                    optional="hidden" invisible="not show_supplier"
                    options="{'no_create': True, 'placeholder_field': 'supplier_id_placeholder'}"
                    decoration-muted="not supplier_id" />
            </xpath>
        </field>
    </record>

</odoo>