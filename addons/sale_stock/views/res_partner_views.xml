<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_partner_view_sale_buttons_inherit" model="ir.ui.view">
        <field name="name">res.partner.sale.stock.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="sale.res_partner_view_buttons" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='sale.act_res_partner_2_sale_order']" position="after">
                <button
                    name="%(action_sale_customer_delay_report)d"
                    type="action"
                    class="oe_stat_button"
                    icon="fa-truck"
                    context="{'search_default_partner_id': id}"
                    invisible="customer_on_time_rate &lt; 0"
                    groups="sales_team.group_sale_salesman">
                    <div class="o_form_field o_stat_info">
                        <div class="o_row">
                            <span class="o_stat_value">
                                <field string="On-time Rate" name="customer_on_time_rate" digits="[42, 0]" />
                            </span>
                            <span class="o_stat_value">%</span>
                        </div>
                        <span class="o_stat_text">On-time Rate</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
