<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_category_form_view_inherit" model="ir.ui.view">
        <field name="name">product.category.form</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="%(category_open_putaway)d" string="Putaway Rules"
                    type="action" class="oe_stat_button" icon="fa-random"
                    groups="stock.group_stock_multi_locations" />
            </div>
            <group name="first" position="after">
                <group>
                    <group name="logistics" string="Logistics">
                        <field name="route_ids" widget="many2many_tags"
                            groups="stock.group_adv_location" />
                        <field name="parent_route_ids" widget="many2many_tags"
                            groups="stock.group_adv_location" invisible="not parent_route_ids" />
                        <field name="removal_strategy_id" options="{'no_create': True}" />
                        <field name="packaging_reserve_method" widget="radio" groups="uom.group_uom" />
                    </group>
                </group>
            </group>
        </field>
    </record>

</odoo>