<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="search_product_lot_filter" model="ir.ui.view">
        <field name="name">Production Lots Filter</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <search string="Product Lots Filter">
                <field name="name" string="Lot/Serial Number"
                    filter_domain="['|', ('name', 'ilike', self),('ref', 'ilike', self)]" />
                <field name="product_id" />
                <field name="lot_properties" />
                <field name="create_date" />
                <filter name="at_customer" string="At Customer"
                    domain="[('quant_ids.location_id.usage','=','customer'), ('quant_ids.quantity', '>', 0)]" />
                <filter name="on_hand" string="On Hand"
                    domain="[('product_qty', '>', 0)]" />
                <filter name="creation_date" string="Creation Date"
                    date="create_date" />
                <group expand="0" string="Group By">
                    <filter name="group_by_product" string="Product"
                        domain="[]"
                        context="{'group_by': 'product_id'}" />
                    <filter name="group_by_location" string="Location"
                        domain="[]"
                        context="{'group_by': 'location_id'}"
                        groups="stock.group_stock_multi_locations" />
                    <filter name="group_by_creation_date" string="Creation date"
                        domain="[]"
                        context="{'group_by': 'create_date'}" />
                    <filter name="group_by_Company" string="Company"
                        domain="[]"
                        context="{'group_by': 'company_id'}" />
                    <filter name="group_by_lot_properties" string="Properties"
                        context="{'group_by': 'lot_properties'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="view_production_lot_tree" model="ir.ui.view">
        <field name="name">stock.production.lot.list</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <list string="Lots/Serial Numbers" multi_edit="1">
                <field name="name" decoration-bf="1" />
                <field name="product_id" readonly="1" />
                <field name="ref" optional="show" />
                <field name="create_date" optional="show" />
                <field name="last_delivery_partner_id" optional="hide" string="Transfer to" />
                <field name="product_qty" optional="hide" />
                <field name="lot_properties" optional="hide" />
                <field name="activity_ids" widget="list_activity" optional="show" />
                <field name="company_id" optional="hide" groups="base.group_multi_company" />
            </list>
        </field>
    </record>

    <record id="view_production_lot_kanban" model="ir.ui.view">
        <field name="name">stock.production.lot.kanban</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <kanban group_create="false" group_delete="false">
                <templates>
                    <t t-name="card">
                        <field name="name" class="fw-bolder fs-5" />
                        <field name="product_id" class="small" />
                        <field name="lot_properties" widget="properties" />
                        <field name="activity_ids" widget="kanban_activity" />
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_production_lot_form" model="ir.ui.view">
        <field name="name">stock.production.lot.form</field>
        <field name="model">stock.lot</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <form string="Lots/Serial Numbers">
                <header></header>
                <sheet>
                    <field name="company_id" invisible="1" />
                    <field name="display_complete" invisible="1" />
                    <div name="button_box" class="oe_button_box"
                        invisible="not display_complete">
                        <button name="action_lot_open_transfers"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-truck"
                            invisible="delivery_count == 0"
                            help="Transfers">
                            <field name="delivery_count" string="Transfers" widget="statinfo" />
                        </button>
                        <button name="action_lot_open_quants"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-arrows">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Locations</span>
                            </div>
                        </button>
                        <button name="%(action_stock_report)d"
                            type="action"
                            class="oe_stat_button"
                            icon="oi-arrow-up">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Traceability</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <span class="o_form_label"><field name="type_name" /></span>
                        <h1>
                            <field name="name" placeholder="e.g. LOT/0001/20121" />
                        </h1>
                    </div>
                    <group name="main_group">
                        <group name="main_group_left">
                            <field name="product_id"
                                context="{'default_is_storable': True, 'default_tracking': 'lot'}"
                                force_save="1"
                                readonly="context.get('set_product_readonly', False)"
                                help="Product this lot/serial number contains. You cannot change it anymore if it has already been moved." />
                            <field name="location_id" invisible="not location_id"
                                groups="stock.group_stock_manager" />
                            <field name="ref" />
                            <field name="last_delivery_partner_id"
                                invisible="not last_delivery_partner_id"
                                groups="stock.group_stock_manager" />
                        </group>
                        <group name="main_group_right">
                            <label for="product_qty" invisible="not display_complete" />
                            <div class="o_row" invisible="not display_complete">
                                <field name="product_qty" />
                                <field name="product_uom_id" groups="uom.group_uom"
                                    widget="many2one_uom" />
                            </div>
                            <field name="lot_properties" nolabel="1" columns="2" hideAddButton="1" />
                        </group>
                    </group>
                    <notebook invisible="not display_complete">
                        <page name="description" string="Description">
                            <field name="note" placeholder="Add an internal note"/>
                        </page>
                        <page name="other_info" string="Other Info">
                            <group>
                                <group>
                                </group>
                                <group>
                                    <field name="company_id"
                                        placeholder="Visible to all coompanies"
                                        groups="base.group_multi_company" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="action_production_lot_form" model="ir.actions.act_window">
        <field name="name">Lots / Serial Numbers</field>
        <field name="res_model">stock.lot</field>
        <field name="path">lots</field>
        <field name="view_ids"
            eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_production_lot_tree')}),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_production_lot_kanban')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_production_lot_form')})]" />
        <field name="search_view_id" ref="search_product_lot_filter" />
        <field name="context">{'search_default_group_by_location': True, 'display_complete': True}</field>
        <field name="domain">[
            '|',
            ('location_id', '=', False),
            ('location_id.company_id', 'in', allowed_company_ids + [False])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a lot/serial number
            </p>
            <p>
                Lots/Serial numbers help you tracking the path followed by your products.
                From their traceability report you will see the full history of their use, as well
                as their composition.
            </p>
        </field>
    </record>

    <record id="action_product_production_lot_form" model="ir.actions.act_window">
        <field name="name">Lots/Serial Numbers</field>
        <field name="res_model">stock.lot</field>
        <field name="view_ids"
            eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_production_lot_kanban')}),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_production_lot_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_production_lot_form')})]" />
        <field name="search_view_id" ref="search_product_lot_filter" />
        <field name="context">{
            'search_default_group_by_product': 1, 'display_complete': True,
            'default_company_id': allowed_company_ids[0]}</field>
        <field name="domain">[
            '|',
            ('location_id', '=', False),
            ('location_id.company_id', 'in', allowed_company_ids + [False])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a lot/serial number
            </p>
            <p>
                Lots/Serial numbers help you tracking the path followed by your products.
                From their traceability report you will see the full history of their use, as well
                as their composition.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_action_production_lot_form"
        parent="menu_stock_inventory_control"
        action="action_production_lot_form"
        sequence="101"
        groups="stock.group_production_lot" />

</odoo>