<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="quant_search_view" model="ir.ui.view">
        <field name="name">stock.quant.search</field>
        <field name="model">stock.quant</field>
        <field eval="10" name="priority" />
        <field name="arch" type="xml">
            <search string="Quants">
                <field name="product_id" />
                <field name="warehouse_id" />
                <field name="location_id" />
                <field name="storage_category_id" groups="stock.group_stock_multi_locations" />
                <field name="product_categ_id" />
                <field name="product_tmpl_id" />
                <field name="package_id" groups="stock.group_tracking_lot" />
                <field name="lot_id" groups="stock.group_production_lot" />
                <field name="user_id" />
                <field name="owner_id" groups="stock.group_tracking_owner" />
                <field name="lot_properties" />
                <group string='Filters' expand='0'>
                    <filter name='internal_loc' string="Internal Locations"
                        domain="[('location_id.usage','=', 'internal')]" />
                    <filter name='transit_loc' string="Transit Locations"
                        domain="[('location_id.usage' ,'=', 'transit')]" />
                    <separator />
                    <filter name="on_hand" string="On Hand"
                        domain="[('on_hand', '=', True)]" />
                    <filter name="to_count" string="To Count"
                        domain="[('inventory_date', '&lt;=', context_today().strftime('%Y-%m-%d'))]" />
                    <filter name="to_apply" string="To Apply"
                        domain="[('inventory_quantity_set', '=', True)]" />
                    <filter name="priority_products" string="Starred Products"
                        domain="[('is_favorite', '=', True)]" />
                    <separator />
                    <filter name="in_stock" string="In Stock"
                        domain="[('quantity', '&gt;', 0.0)]" />
                    <filter name="conflicts" string="Conflicts"
                        domain="[('is_outdated', '=', True)]" />
                    <filter name="negative" string="Negative Stock"
                        domain="[('quantity', '&lt;', 0.0)]" />
                    <filter name="reserved" string="Reservations"
                        domain="[('reserved_quantity', '&gt;', 0.0)]" />
                    <separator />
                    <filter name="filter_in_date" date="in_date" />
                    <separator />
                    <filter name="my_count" string="My Counts"
                        domain="[('user_id', '=', uid)]" />
                </group>
                <group string='Group by' expand='0'>
                    <filter name="productgroup" string='Product'
                        context="{'group_by': 'product_id'}" />
                    <filter name="productcategorygroup" string='Product Category'
                        context="{'group_by': 'product_categ_id'}" />
                    <filter name="locationgroup" string='Location'
                        domain="[]"
                        context="{'group_by': 'location_id'}" />
                    <filter name="storagecategorygroup" string='Storage Category'
                        domain="[]"
                        context="{'group_by': 'storage_category_id'}" />
                    <filter name="Lot_Serial_number" string='Lot/Serial Number'
                        context="{'group_by': 'lot_id'}"
                        groups="stock.group_production_lot" />
                    <filter name="package" string='Package'
                        domain="[]"
                        context="{'group_by': 'package_id'}"
                        groups="stock.group_tracking_lot" />
                    <filter name="owner" string='Owner'
                        context="{'group_by': 'owner_id'}"
                        groups="stock.group_tracking_owner" />
                    <filter name="company" string='Company'
                        domain="[]"
                        context="{'group_by': 'company_id'}"
                        groups="base.group_multi_company" />
                </group>
            </search>
        </field>
    </record>

    <!-- Precedence -->
    <record id="action_view_quants" model="ir.actions.server"> <!-- Menu + python -->
        <field name="name">Inventory</field>
        <field name="model_id" ref="model_stock_quant" />
        <field name="state">code</field>
        <field name="group_ids" eval="[(4, ref('stock.group_stock_user'))]" />
        <field name="code">
            action = model.with_context(
            search_default_internal_loc=1,
            always_show_loc=1,
            ).action_view_quants()
        </field>
    </record>

    <record id="action_view_inventory_tree" model="ir.actions.server"> <!-- Menu + python -->
        <field name="name">Inventory</field>
        <field name="model_id" ref="model_stock_quant" />
        <field name="path">physical-inventory</field>
        <field name="state">code</field>
        <field name="group_ids" eval="[(4, ref('stock.group_stock_user'))]" />
        <field name="code">
            action = model.action_view_inventory()
        </field>
    </record>

    <!-- Location Report view -->
    <record id="view_stock_quant_tree_editable" model="ir.ui.view">
        <field name="name">stock.quant.list.editable</field>
        <field name="model">stock.quant</field>
        <field eval="5" name="priority" />
        <field name="arch" type="xml">
            <list editable="bottom"
                create="1" edit="1" js_class="inventory_report_list"
                sample="1" duplicate="0">
                <header>
                    <button name="action_stock_quant_relocate" string="Relocate"
                        type="object"
                        context="{'action_ref': 'stock.action_view_quants'}"
                        invisible="context.get('hide_location', False)"
                        groups="stock.group_stock_manager" />
                </header>
                <field name="company_id" column_invisible="True" />
                <field name="create_date" column_invisible="True" />
                <field name="write_date" column_invisible="True" />
                <field name="id" column_invisible="True" />
                <field name="tracking" column_invisible="True" />
                <field name="location_id"
                    readonly="id"
                    options="{'no_create': True}"
                    optional="show"
                    column_invisible="context.get('hide_location', False)" />
                <field name="storage_category_id" optional="hide" />
                <field name="product_categ_id" optional="hide" />
                <field name="product_id"
                    force_save="1"
                    widget="many2one"
                    readonly="context.get('single_product', False) or id"
                    options="{'no_create': True}" />
                <field name="package_id"
                    readonly="id"
                    optional="show"
                    groups="stock.group_tracking_lot" />
                <field name="lot_id"
                    readonly="id or tracking not in ['serial', 'lot']"
                    context="{'default_product_id': product_id}"
                    optional="show"
                    column_invisible="context.get('hide_lot', False)"
                    groups="stock.group_production_lot" />
                <field name="owner_id"
                    readonly="id"
                    options="{'no_create': True}"
                    optional="show"
                    groups="stock.group_tracking_owner" />
                <field name="inventory_quantity_auto_apply" string="On Hand Quantity"
                    readonly="0"
                    sum="Total On Hand" />
                <field name="reserved_quantity" optional="show" sum="Total Reserved" />
                <field name="available_quantity" optional="show" sum="Total Available" />
                <field name="product_uom_id" widget="many2one_uom"
                    optional="show"
                    groups="uom.group_uom" />
                <field name="lot_properties" optional="hide" />
                <field name='company_id'
                    optional="hidden"
                    groups="base.group_multi_company" />
                <button name="action_view_stock_moves" string="History"
                    type="object" class="btn-link" icon="fa-history" />
                <button name="action_view_orderpoints" string="Replenishment"
                    type="object" class="btn-link" icon="fa-refresh"
                    context="{'default_product_id': product_id, 'search_default_location_id': location_id}" />
            </list>
        </field>
    </record>

    <!-- Inventory Adjustments + Update Quantity (via product) view -->
    <record id="view_stock_quant_tree_inventory_editable" model="ir.ui.view">
        <field name="name">stock.quant.inventory.list.editable</field>
        <field name="model">stock.quant</field>
        <field eval="10" name="priority" />
        <field name="arch" type="xml">
            <list
                default_order="location_id, inventory_date, product_id, package_id, lot_id, owner_id"
                decoration-warning='is_outdated' editable="bottom" create="1" edit="1" import="1"
                js_class="inventory_report_list" sample="1">
                <header>
                    <button name="action_apply_all" string="Apply All"
                        type="object" class="btn btn-secondary"
                        invisible="not context.get('inventory_mode') or context.get('inventory_report_mode')"
                        display="always"
                    />
                    <button name="stock.action_stock_inventory_adjustement_name" string="Apply"
                        type="action" />
                    <button name="action_reset" string="Clear"
                        type="object"
                        groups="stock.group_stock_manager" />
                    <button name="stock.action_stock_request_count" string="Request a Count"
                        type="action"
                        groups="stock.group_stock_manager" />
                    <button name="action_stock_quant_relocate" string="Relocate"
                        type="object"
                        context="{'action_ref': 'stock.action_view_inventory_tree'}"
                        invisible="context.get('hide_location', False)"
                        groups="stock.group_stock_manager" />
                </header>
                <field name="company_id" column_invisible="True" />
                <field name="create_date" column_invisible="True" />
                <field name="write_date" column_invisible="True" />
                <field name="id" column_invisible="True" />
                <field name="is_outdated" column_invisible="True" />
                <field name="sn_duplicated" column_invisible="True" />
                <field name="tracking" column_invisible="True" />
                <field name="inventory_quantity_set" column_invisible="True" />
                <field name="location_id"
                    domain="[('usage', 'in', ['internal', 'transit'])]"
                    readonly="id"
                    options="{'no_create': True}"
                    optional="show"
                    column_invisible="context.get('hide_location', False)" />
                <field name="storage_category_id"
                    options="{'no_create': True}"
                    optional="hidden"
                    column_invisible="context.get('hide_location', False)"
                    groups="stock.group_stock_multi_locations" />
                <field name="cyclic_inventory_frequency"
                    options="{'no_create': True}"
                    optional="hidden"
                    column_invisible="context.get('hide_location', False)" />
                <field name="product_categ_id" optional="hidden" />
                <field name="is_favorite" widget="boolean_favorite" nolabel="1" optional="hidden" />
                <field name="product_id"
                    force_save="1"
                    readonly="context.get('single_product', False) or id"
                    options="{'no_create': True}" />
                <button name="action_warning_duplicated_sn"
                    title="This lot/serial number is already in another location"
                    type="object" class="btn btn-secondary text-warning float-end" icon="fa-warning"
                    invisible="not sn_duplicated" />
                <field name="package_id"
                    readonly="id"
                    optional="show"
                    groups="stock.group_tracking_lot" />
                <field name="lot_id"
                    force_save="1"
                    readonly="tracking not in ['serial', 'lot'] or (id and (lot_id or quantity != 0))"
                    context="{'default_product_id': product_id}"
                    decoration-warning="sn_duplicated"
                    optional="show"
                    column_invisible="context.get('hide_lot', False)"
                    groups="stock.group_production_lot" />
                <field name="owner_id"
                    readonly="id"
                    options="{'no_create': True}"
                    optional="show"
                    groups="stock.group_tracking_owner" />
                <field name="quantity" string="On Hand Quantity"
                    decoration-warning="quantity &lt; 0"
                    optional="show" />
                <field name="available_quantity" string="Available Quantity"
                    decoration-danger="available_quantity &lt; 0"
                    optional="hidden" />
                <field name="product_uom_id" optional="show" groups="uom.group_uom" />
                <field name="last_count_date" optional='hidden' readonly='1' />
                <field name="inventory_quantity" widget="counted_quantity_widget" />
                <field name="inventory_diff_quantity" string="Difference"
                    invisible="not inventory_quantity_set"
                    decoration-muted="inventory_diff_quantity == 0"
                    decoration-danger="inventory_diff_quantity &lt; 0"
                    decoration-success="inventory_diff_quantity &gt; 0"
                    decoration-bf="inventory_diff_quantity != 0" />
                <field name="inventory_date" optional="show" />
                <field name="user_id" string="User" optional="show" />
                <field name="lot_properties" optional="hide" />
                <field name='company_id' optional="hide"
                    groups="base.group_multi_company" />
                <button name="action_inventory_history" string="History"
                    type="object" class="btn btn-link text-info" icon="fa-history" />
                <button name="action_apply_inventory" string="Apply"
                    type="object" class="btn btn-link" icon="fa-save"
                    invisible="not inventory_quantity_set" />
                <button name="action_set_inventory_quantity" string="Set"
                    type="object" class="btn btn-link" icon="fa-bullseye"
                    invisible="inventory_quantity_set" />
                <button name="action_clear_inventory_quantity" string="Clear"
                    type="object" class="btn text-warning" icon="fa-times"
                    invisible="not inventory_quantity_set" />
            </list>
        </field>
    </record>

    <record id="view_stock_quant_tree_simple" model="ir.ui.view">
        <field name="name">stock.quant.list</field>
        <field name="model">stock.quant</field>
        <field eval="10" name="priority" />
        <field name="arch" type="xml">
            <list export_xlsx="0">
                <field name="location_id"
                    column_invisible="context.get('hide_location', False)" />
                <field name="product_id"
                    column_invisible="context.get('single_product', False)" />
                <field name="lot_id"
                    column_invisible="context.get('hide_lot', False)"
                    groups="stock.group_production_lot" />
                <field name="package_id" groups="stock.group_tracking_lot" />
                <field name="owner_id" groups="stock.group_tracking_owner" />
                <field name="quantity" string="On Hand" />
                <field name="available_quantity" string="Available" />
                <field name="product_uom_id" groups="uom.group_uom" />
                <field name="lot_properties" />
                <field name="company_id" optional="hidden"
                    groups="base.group_multi_company" />
            </list>
        </field>
    </record>

    <record id="view_stock_quant_tree" model="ir.ui.view">
        <field name="name">stock.quant.list</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_simple" />
        <field name="mode">primary</field>
        <field name="priority" eval="10" />
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="js_class">inventory_report_list</attribute>
                <attribute name="create">0</attribute>
                <attribute name="delete">0</attribute>
                <attribute name="export_xlsx">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_stock_quant_pivot" model="ir.ui.view">
        <field name="name">stock.quant.pivot</field>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <pivot string="Inventory" sample="1">
                <field name="location_id" type="row" />
                <field name="product_id" type="row" />
                <field name="quantity" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="stock_quant_view_graph" model="ir.ui.view">
        <field name="name">stock.quant.graph</field>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <graph string="Stock Quant" sample="1">
                <field name="product_id" />
                <field name="quantity" type="measure" />
            </graph>
        </field>
    </record>

    <record id="view_stock_quant_form_editable" model="ir.ui.view">
        <field name="name">stock.quant.form.editable</field>
        <field name="model">stock.quant</field>
        <field eval="11" name="priority" />
        <field name="arch" type="xml">
            <form string="Inventory Valuation" create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="tracking" invisible="1" />
                            <field name="company_id" invisible="1" />
                            <field name="product_id" readonly="0" options="{'no_create': True}" />
                            <field name="location_id" readonly="0" options="{'no_create': True}" />
                            <field name="lot_id"
                                required="tracking != 'none'"
                                readonly="tracking not in ['serial', 'lot']"
                                context="{'default_product_id': product_id}"
                                groups="stock.group_production_lot" />
                            <field name="package_id" readonly="0"
                                groups="stock.group_tracking_lot" />
                            <field name="owner_id" readonly="0"
                                options="{'no_create': True}"
                                groups="stock.group_tracking_owner" />
                            <field name='company_id' groups="base.group_multi_company" />
                        </group>
                        <group>
                            <label for="quantity" string="Quantity On Hand" />
                            <div class="o_row">
                                <field name="quantity" />
                                <field name="product_uom_id" groups="uom.group_uom"
                                    options="{'no_open': True}" />
                            </div>
                            <label for="available_quantity" string="Available Quantity" />
                            <div class="o_row">
                                <field name="available_quantity" />
                                <field name="product_uom_id" groups="uom.group_uom"
                                    options="{'no_open': True}" />
                            </div>
                            <label for="reserved_quantity" string="Quantity Reserved" />
                            <div class="o_row">
                                <field name="reserved_quantity" />
                                <field name="product_uom_id" groups="uom.group_uom"
                                    options="{'no_open': True}" />
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_stock_quant_form" model="ir.ui.view">
        <field name="name">view.stock.quant.form</field>
        <field name="priority">100</field>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <form string="Create Stock">
                <div class="alert alert-warning" role="alert"
                    invisible="context.get('readonly_form')">
                    You are going to pick products that are not referenced
                    in this location. That leads to a negative stock.
                </div>
                <group>
                    <group>
                        <field name="location_id" invisible="1" />
                        <field name="company_id" invisible="1" />
                        <field name="product_id" invisible="1" />
                        <field name="product_id" force_save="1" invisible="1" />
                        <field name="lot_id"
                            readonly="context.get('readonly_form')"
                            domain="[('product_id', '=', product_id)]"
                            context="{'default_product_id': product_id, 'active_picking_id': context.get('active_picking_id')}"
                            groups="stock.group_production_lot" />
                        <field name="location_id"
                            readonly="context.get('readonly_form')"
                            groups="stock.group_stock_multi_locations" />
                        <field name="package_id"
                            invisible="context.get('readonly_form')"
                            groups="stock.group_tracking_lot" />
                        <field name="owner_id"
                            invisible="context.get('readonly_form')"
                            groups="stock.group_tracking_owner" />
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="dashboard_open_quants" model="ir.actions.act_window"> <!-- Used in dashboard -->
        <field name="name">Update Quantity</field>
        <field name="res_model">stock.quant</field>
        <field name="view_id" ref="view_stock_quant_tree_editable" />
        <field name="context">{
            'search_default_internal_loc': 1,
            'search_default_productgroup':1,
            'search_default_locationgroup':1,
            'inventory_mode':True
        }</field>
    </record>

    <record id="location_open_quants" model="ir.actions.act_window"> <!-- Used in location -->
        <field name="name">Current Stock</field>
        <field name="res_model">stock.quant</field>
        <field name="view_id" ref="view_stock_quant_tree" />
        <field name="domain">[('location_id', 'child_of', active_ids)]</field>
        <field name="context">{'search_default_productgroup': 1}</field>
    </record>

    <record id="duplicated_sn_warning" model="ir.ui.view">
        <field name="name">stock.quant.duplicated.sn.warning</field>
        <field name="model">stock.quant</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <form string="Duplicated SN Warning"> This SN is already in another location. <footer>
                    <button string="Close" class="btn btn-primary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_set_quants_tree" model="ir.actions.server">
        <field name="name">Set to quantity on hand</field>
        <field name="model_id" ref="model_stock_quant" />
        <field name="binding_model_id" ref="stock.model_stock_quant" />
        <field name="binding_view_types">list,kanban</field>
        <field name="state">code</field>
        <field name="group_ids" eval="[(4, ref('stock.group_stock_user'))]" />
        <field name="code">
            action = records.action_set_inventory_quantity()
        </field>
    </record>

    <record id="action_view_set_to_zero_quants_tree" model="ir.actions.server">
        <field name="name">Set to 0</field>
        <field name="model_id" ref="model_stock_quant" />
        <field name="binding_model_id" ref="stock.model_stock_quant" />
        <field name="binding_view_types">list,kanban</field>
        <field name="state">code</field>
        <field name="group_ids" eval="[(4, ref('stock.group_stock_manager'))]" />
        <field name="code">
            action = records.action_set_inventory_quantity_zero()
        </field>
    </record>

    <menuitem
        id="menu_action_inventory_tree"
        name="Physical Inventory"
        parent="menu_stock_adjustments"
        sequence="10"
        action="action_view_inventory_tree" />

    <menuitem
        id="menu_valuation"
        name="Locations"
        parent="stock.menu_warehouse_report"
        sequence="150"
        action="action_view_quants"
        groups="stock.group_stock_multi_locations,stock.group_tracking_owner,base.group_no_one" />

</odoo>